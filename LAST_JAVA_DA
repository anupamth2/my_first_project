	public void  insert_into_issued(String book_id ,String student_id)
	{
		try {
			conn = DriverManager.getConnection(jdbcUrl, username, password);
		      
		      stmt = conn.createStatement();
		      String issue_details=" insert into mydb.issued(issued_id,start_time,end_time,book_id,student_id)"+"values(?,?,?,?,?);";
		      PreparedStatement pr = conn.prepareStatement(issue_details);
		      pr.setString(1, book_id);
		      pr.setString(2, password);
		    //  pr.execute();
		
		}catch (SQLException e) {
			
		      e.printStackTrace();
		    } finally {
		      try {
		        // Close connection
		        if (stmt != null) {
		          stmt.close();
		        }
		        if (conn != null) {
		          conn.close();
		        }
		      } catch (Exception e) {
		        e.printStackTrace();
		      }
		    }
		
	}
	
	
	public ArrayList<String> find_book(String name)
	{
		 ArrayList<String > arr=new ArrayList<String>();
		try {
			conn = DriverManager.getConnection(jdbcUrl, username, password);
		      
		      stmt = conn.createStatement();
		      String find_="select * from mydb.books where name=?";
		      
		      PreparedStatement pr=conn.prepareStatement(find_);
		      pr.setString(1, name);
		     
		      ResultSet rs=pr.executeQuery();
		      while(rs.next())
		      {
		    	  arr.add(rs.getString(1));
		      }
		      System.out.println(arr.toString());
		      return arr;
			
		}catch (SQLException e) {
			
		      e.printStackTrace();
		    } finally {
		      try {
		        // Close connection
		        if (stmt != null) {
		          stmt.close();
		        }
		        if (conn != null) {
		          conn.close();
		        }
		      } catch (Exception e) {
		        e.printStackTrace();
		      }
		    }
		return arr;
	}
	public int verify_login(String username1,String password1)
	{
		try
		{
			   conn = DriverManager.getConnection(jdbcUrl, username, password);
			      
			      stmt = conn.createStatement();
			      String verify_command="select * from mydb.useres where id=? and pass=?";
			      PreparedStatement pr=conn.prepareStatement(verify_command);
			      pr.setString(1, password1);
			      pr.setString(2, username1);
			      ArrayList<String>  arr=new ArrayList<String>();
			     ResultSet rs=pr.executeQuery();
			    // CursorSet
			     while(rs.next())
			     {
			    	 arr.add(rs.getString(1));
			     }
			     if(arr.size()>0)
			     {
			    	 System.out.println("successfully verified");
			    	 return 1;
			     }
			     else
			     {
			    	 System.out.println("longin failed ");
			    	 return 0;
			     }
			      
		}catch (SQLException e) {
			
		      e.printStackTrace();
		    } finally {
		      try {
		        // Close connection
		        if (stmt != null) {
		          stmt.close();
		        }
		        if (conn != null) {
		          conn.close();
		        }
		      } catch (Exception e) {
		        e.printStackTrace();
		      }
		    }
		return 1;
	}
	public void send_to_database(ArrayList<String>arr,int index,int kk)
	{


		    try {
		    	/*String my_command = "insert into mydb.users values("+arr.get(0)
		    	+","
		    			+arr.get(1)
		    			+","
		    			+arr.get(2)+","
		    			+arr.get(3)+","
		    			+index+");";
		    			*/
		    	String my_command = "insert into mydb.useres (Name,id,pass,email,profession)"+"values(?,?,?,?,?);";
		    	String book_regis="insert into mydb.books(Name,id,publication,Date_of_buy)"+"values(?,?,?,?);";
		 
		      conn = DriverManager.getConnection(jdbcUrl, username, password);
		      
		      stmt = conn.createStatement();
		      
		     	if(kk==-1)
		    	{
		    		PreparedStatement ps=conn.prepareStatement(book_regis);
		    		ps.setString(1, arr.get(0));
		    		ps.setString(2, arr.get(1));
		    		ps.setString(3, arr.get(2));
		    		ps.setString(4, arr.get(3));
		    		ps.execute();
		    	}

		      if(kk==1)
		      {
		      PreparedStatement pst=conn.prepareStatement(my_command);
		      pst.setString(1, arr.get(0));
		      pst.setString(2, arr.get(1));
		      pst.setString(3, arr.get(2));
		      pst.setString(4, arr.get(3));
		      pst.setInt(5, index);
		      
		      pst.execute();
		      }

		      //stmt.executeUpdate(my_command);

		      System.out.println("Table created");

		    } catch (SQLException e) {
		      e.printStackTrace();
		    } finally {
		      try {
		        // Close connection
		        if (stmt != null) {
		          stmt.close();
		        }
		        if (conn != null) {
		          conn.close();
		        }
		      } catch (Exception e) {
		        e.printStackTrace();
		      }
		    }
		System.out.println("hello world");
	
	}
	
